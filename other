public function findByApplicationFilter(ApplicationFilter $applicationFilter)
    {
       $applications = $this->createQueryBuilder('a')
           ->where('1=1');

           if ($applicationFilter->getUser()) {
               $applications
                   ->andWhere('a.create_by_user = :user')
                   ->setParameter('user', $applicationFilter->getUser());
           }
       ;
    }





